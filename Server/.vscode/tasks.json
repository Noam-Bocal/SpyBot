{
    "version": "2.0.0",
    "tasks": [
      {
        "type": "shell",
        "label": "C/C++: g++ build active file",
        "command": "/usr/bin/g++",
        "args": [
            "-g",
            "${workspaceFolder}/*.cpp",
            "-o",
            "${fileDirname}/${fileBasenameNoExtension}",
            "-lsqlite3",
            "-lpthread",
            "-L/usr/lib/x86_64-linux-gnu"
