{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File (Root)",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true,
            "python": "/usr/bin/python3",
            "args": ["test.py"],
            "env": {"PYTHONPATH": "${workspaceFolder}"}, 
            "stopOnEntry": false,
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "sudo_python"
        }
    ]
}
